<a href="{{ url("person_details", person_id=person.id) }}" target="_blank">{{ person.full_name_ru }}</a> {% if person.date_of_birth %}, {{ person.date_of_birth }} {% endif %}<br />
{% if person.last_job_title or person.last_workplace %}
{{ person.last_job_title }} @ {{ person.last_workplace }} <br/>
{% endif %}
{% if person.related_persons %}
<strong>{{ _("Родина та пов'язані особи:") }}</strong> <br/>
{% for rp in person.related_persons[:10] %}
    {{ rp.person_ru }}, {{ rp.relationship_type_ru }} <br/>
{% endfor %}
{% endif %}

{% if person.related_companies %}
<strong>{{ _("Юр. особи:") }}</strong> <br/>
{% for rc in person.related_companies[:10] %}
    {{ rc.to_company_ru }}, {{ rc.relationship_type_ru }} <br/>
{% endfor %}
{% endif %}